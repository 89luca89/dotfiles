#!/bin/sh
# Sync target app via syncthing.
# Create tar.gz of app config/data folder and protect it with gpg.

set -o errexit
# set -o nounset

app_sync() {
	TARGET=$1
	if [ -z $2 ]; then
		echo -n "Password: "
		read -s password
		echo
		echo -n "Retype Password: "
		read -s password_2
		echo

		if [ "$password" != "$password_2" ]; then
			echo pass mismatch
			exit 1
		fi

	else
		password=$2
	fi
	case "$TARGET" in
	"gpg")
		[ -d ~/.gnupg ] || (echo "No folder to backup" && exit 1)
		cd ~ || exit 1
		tar -czf /tmp/gnupg-keys.tar.gz .gnupg
		gpg --passphrase "$password" --yes --batch --output /tmp/gnupg-keys.tar.gz.gpg --symmetric /tmp/gnupg-keys.tar.gz
		shred -n 25 -u -z /tmp/gnupg-keys.tar.gz
		mv /tmp/gnupg-keys.tar.gz.gpg ~/Syncthing/Secured/
		;;
	"pass")
		[ -d ~/.password-store ] || (echo "No folder to backup" && exit 1)
		cd ~ || exit 1
		tar -czf /tmp/pass-store.tar.gz .password-store
		gpg --passphrase "$password" --yes --batch --output /tmp/pass-store.tar.gz.gpg --symmetric /tmp/pass-store.tar.gz
		shred -n 25 -u -z /tmp/pass-store.tar.gz
		mv /tmp/pass-store.tar.gz.gpg ~/Syncthing/Secured/
		;;
	"xfce4")
		[ -d ~/.config/xfce4 ] || (echo "No folder to backup" && exit 1)
		cd ~ || exit 1
		tar -czf ~/dotfiles/xfce/xfce4-setup.tar.gz .config/xfce4/ .config/Thunar .config/Mousepad
		git -C ~/dotfiles commit -m "xfce4: update settings" xfce/xfce4-setup.tar.gz
		;;
	"gnome")
		mkdir /tmp/bkp
		cd /tmp/bkp || exit 1
		for f in $(dconf list /org/gnome/ | grep -v login); do
			dconf dump /org/gnome/$f >org.gnome.$(echo $f | cut -d'/' -f1).conf
		done
		tar -czf ~/dotfiles/gnome/gnome-setup.tar.gz /tmp/bkp
		rm -rf /tmp/bkp
		git -C ~/dotfiles commit -m "gnome: update settings" gnome/gnome-setup.tar.gz
		;;
	"pidgin")
		[ -d ~/.purple ] || (echo "No folder to backup" && exit 1)
		cd ~ || exit 1
		tar --exclude=*downloads* --exclude=.git --exclude=icons -c -z -f /tmp/pidgin-profile.tar.gz .purple
		gpg --passphrase "$password" --yes --batch --output /tmp/pidgin-profile.tar.gz.gpg --symmetric /tmp/pidgin-profile.tar.gz
		shred -n 25 -u -z /tmp/pidgin-profile.tar.gz
		mv /tmp/pidgin-profile.tar.gz.gpg ~/Syncthing/Secured/
		;;
	"firefox")
		[ -d ~/.mozilla ] || (echo "No folder to backup" && exit 1)
		find ~/.mozilla/ -iname "*cache*" | xargs rm -rf
		find .mozilla/firefox/*/storage/default/http* -iname "*.files" | xargs rm -rf
		cd ~ || exit 1
		tar -czf /tmp/firefox-profile.tar.gz .mozilla
		gpg --passphrase "$password" --yes --batch --output /tmp/firefox-profile.tar.gz.gpg --symmetric /tmp/firefox-profile.tar.gz
		shred -n 25 -u -z /tmp/firefox-profile.tar.gz
		mv /tmp/firefox-profile.tar.gz.gpg ~/Syncthing/Secured/
		;;
	"thunderbird")
		[ -d ~/.thunderbird ] || (echo "No folder to backup" && exit 1)
		find ~/.thunderbird/ -iname "*cache*" | xargs rm -rf
		cd ~ || exit 1
		tar -c -z -f /tmp/thunderbird-profile.tar.gz --exclude=.thunderbird/*/extensions/lang* --exclude=.thunderbird/*-default/ImapMail .thunderbird/
		gpg --passphrase "$password" --yes --batch --output /tmp/thunderbird-profile.tar.gz.gpg --symmetric /tmp/thunderbird-profile.tar.gz
		shred -n 25 -u -z /tmp/thunderbird-profile.tar.gz
		mv /tmp/thunderbird-profile.tar.gz.gpg ~/Syncthing/Secured/
		;;
	"geary")
		[ -d ~/.config/geary ] || (echo "No folder to backup" && exit 1)
		cd ~ || exit 1
		tar -czf /tmp/geary-profile.tar.gz .config/geary/
		gpg --passphrase "$password" --yes --batch --output /tmp/geary-profile.tar.gz.gpg --symmetric /tmp/geary-profile.tar.gz
		shred -n 25 -u -z /tmp/geary-profile.tar.gz
		mv /tmp/geary-profile.tar.gz.gpg ~/Syncthing/Secured/
		;;
	"syncthing")
		[ -d ~/.config/syncthing ] || (echo "No folder to backup" && exit 1)
		cd ~ || exit 1
		tar -czf /tmp/syncthing-profile-$(hostname).tar.gz .config/syncthing/
		mv /tmp/syncthing-profile-$(hostname).tar.gz ~/Syncthing/Secured/
		;;
	esac
}

#
app_restore() {
	TARGET=$1
	case "$TARGET" in
	"gpg")
		gpg --output /tmp/gnupg-keys.tar.gz --decrypt ~/Syncthing/Secured/gnupg-keys.tar.gz.gpg
		if [ ! -f /tmp/gnupg-keys.tar.gz ]; then
			echo "Failed to decrypt"
			exit 1
		fi
		rm -rf ~/.gnupg
		tar -xzf /tmp/gnupg-keys.tar.gz -C ~/
		shred -n 25 -u -z /tmp/gnupg-keys.tar.gz
		;;
	"pass")
		gpg --output /tmp/pass-store.tar.gz --decrypt ~/Syncthing/Secured/pass-store.tar.gz.gpg
		if [ ! -f /tmp/pass-store.tar.gz ]; then
			echo "Failed to decrypt"
			exit 1
		fi
		rm -rf ~/.password-store
		tar -xzf /tmp/pass-store.tar.gz -C ~/
		shred -n 25 -u -z /tmp/pass-store.tar.gz
		;;
	"pidgin")
		gpg --output /tmp/pidgin-profile.tar.gz --decrypt ~/Syncthing/Secured/pidgin-profile.tar.gz.gpg
		if [ ! -f /tmp/pidgin-profile.tar.gz ]; then
			echo "Failed to decrypt"
			exit 1
		fi
		rm -rf ~/.purple
		tar -xzf /tmp/pidgin-profile.tar.gz -C ~/
		shred -n 25 -u -z /tmp/pidgin-profile.tar.gz
		;;
	"gnome")
		rm -rf /tmp/bkp
		tar -xzf ~/dotfiles/gnome/gnome-setup.tar.gz -C /
		cd /tmp/bkp || exit 1
		for file in *; do
			dconf_path=$(echo '/'$file | sed 's/\.conf/\//g' | sed 's/\./\//g')
			dconf load $dconf_path <$file
		done
		rm -rf /tmp/bkp
		;;
	"xfce4")
		rm -rf ~/.config/xfce4 ~/.config/Thunar ~/.config/Mousepad
		tar -xzf ~/dotfiles/xfce/xfce4-setup.tar.gz -C ~/
		killall -9 xfconfd || true
		killall -9 xfce4-panel || true
		killall -9 thunar || true
		killall -9 xfce4-volumed-pulse || true
		killall -9 xfdesktop || true
		killall -9 xfce4-power-manager || true
		killall -9 xfce4-notifyd || true
		nohup xfce4-power-manager &
		nohup xfce4-panel &
		nohup /usr/lib64/xfce4/notifyd/xfce4-notifyd &
		nohup xfce4-volumed-pulse &
		nohup xfwm4 --replace &
		;;
	"firefox")
		gpg --output /tmp/firefox-profile.tar.gz --decrypt ~/Syncthing/Secured/firefox-profile.tar.gz.gpg
		if [ ! -f /tmp/firefox-profile.tar.gz ]; then
			echo "Failed to decrypt"
			exit 1
		fi
		rm -rf ~/.mozilla
		tar -xzf /tmp/firefox-profile.tar.gz -C ~/
		shred -n 25 -u -z /tmp/firefox-profile.tar.gz
		;;
	"thunderbird")
		gpg --output /tmp/thunderbird-profile.tar.gz --decrypt ~/Syncthing/Secured/thunderbird-profile.tar.gz.gpg
		if [ ! -f /tmp/thunderbird-profile.tar.gz ]; then
			echo "Failed to decrypt"
			exit 1
		fi
		rm -rf ~/.thunderbird
		tar -xzf  /tmp/thunderbird-profile.tar.gz -C ~/
		shred -n 25 -u -z /tmp/thunderbird-profile.tar.gz
		;;
	"geary")
		gpg --output /tmp/geary-profile.tar.gz --decrypt ~/Syncthing/Secured/geary-profile.tar.gz.gpg
		if [ ! -f /tmp/geary-profile.tar.gz ]; then
			echo "Failed to decrypt"
			exit 1
		fi
		rm -rf ~/.config/geary
		tar -xzf /tmp/geary-profile.tar.gz -C ~/
		shred -n 25 -u -z /tmp/geary-profile.tar.gz
		;;
	esac
}

if [ "$1" = "sync" ]; then
	shift 1
	app_sync $@
elif [ "$1" = "restore" ]; then
	shift 1
	app_restore $@
else
	echo "Example: sync_app sync firefox"
	echo "Example: sync_app restore firefox"
	echo ""
fi
