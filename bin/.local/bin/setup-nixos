#!/usr/bin/env bash

set -x
set -e errexit
set -e nounset

sudo cp "${HOME}/dotfiles/configuration.nix" /etc/nixos/
sudo nixos-rebuild switch

echo '[storage]
driver = "overlay"

[storage.options.overlay]
mount_program = "/run/current-system/sw/bin/fuse-overlayfs"' > ~/.config/containers/storage.conf

setup-flatpak
