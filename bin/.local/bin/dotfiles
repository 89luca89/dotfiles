#!/bin/sh

set -o errexit                                                                                                                                              â”‚
set -o nounset

cd "$HOME/dotfiles"

for i in $(ls -d */ | grep -vE "^_"); do
    echo "$i"
    stow -t ~ -D "$i" 2>/dev/null
    stow -t ~ -S "$i" 2>/dev/null
done

ln -sf "Syncthing/conf/.histfile" "$HOME/.histfile"
ln -sfn "Syncthing/bin" "$HOME/bin"

cd -
