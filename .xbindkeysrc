# Common shortcuts for all
#
"xdg-open https://about:blank"
    m:0x40 + c:25
    Mod4 + w

"xdg-open $HOME"
    m:0x40 + c:26
    Mod4 + e

"cd ~ && gnome-terminal -- tmux"
    m:0x40 + c:28
    Mod4 + t

"cd ~ && gnome-terminal -- tmux"
    m:0xc + c:28
    Control+Alt + t

"rofi  -combi-modi window,drun,run -show combi -modi combi -modi run -theme Arc-Dark -show-icons  -theme-str 'element-icon { size: 2ch;}'"
    m:0x40 + c:38
    Mod4 + a

"search Passwords"
    m:0x40 + c:39
    Mod4 + s

"search"
    m:0x40 + c:65
    Mod4 + space

"switch-theme"
    m:0x40 + c:40
    Mod4 + d

"mpv_play"
    m:0x40 + c:45
    Mod4 + k

"xscreensaver-command -lock"
    m:0x40 + c:46
    Mod4 + l

"xdotool key Page_Up"
    b:9

"xdotool key Page_Down"
    b:8

"wmctrl -c :ACTIVE:"
    m:0x9 + c:24
    Alt + q

"wmctrl -c :ACTIVE:"
    m:0x40 + c:24
    Mod4 + q

"wmctrl -r :ACTIVE: -b toggle,fullscreen"
    m:0x40 + c:41
    Mod4 + f

"winfocus left"
    m:0x41 + c:113
    Shift+Mod4 + Left

"winfocus right"
    m:0x41 + c:114
    Shift+Mod4 + Right

"quicktile bottom-right"
    m:0x5 + c:114
    Control+Shift + Right

"quicktile bottom-left"
    m:0x5 + c:113
    Control+Shift + Left

"quicktile top-right"
    m:0x9 + c:114
    Alt+Shift + Right

"quicktile top-left"
    m:0x9 + c:113
    Alt+Shift + Left

### Media Management

"amixer -q set Master toggle"
    XF86AudioMute

"gnome-screenshot -i --file=file:///home/luca-linux/Pictures/Screenshot_$(date +%F_%H-%M-%S).jpg"
    m:0x0 + c:107
    Print
"sleep 1; gnome-screenshot -a --file=file:///home/luca-linux/Pictures/Screenshot_$(date +%F_%H-%M-%S).jpg"
    m:0x1 + c:107
    Shift + Print
"gnome-screenshot -w --file=file:///home/luca-linux/Pictures/Screenshot_$(date +%F_%H-%M-%S).jpg"
    m:0x8 + c:107
    Alt + Print
