# Common shortcuts for all
#
"xdg-open https://about:blank"
    m:0x40 + c:25
    Mod4 + w

"xdg-open ~"
    m:0x40 + c:26
    Mod4 + e

"cd ~ && alacritty"
    m:0x40 + c:28
    Mod4 + t

"cd ~ && alacritty -e tmux"
    m:0xc + c:28
    Control+Alt + t

"rofi  -combi-modi drun,run,window -show combi -modi combi -modi run -theme ~/dotfiles/rofi/onedark.rasi -show-icons  -theme-str 'element-icon { size: 3ch;}'"
    m:0x40 + c:38
    Mod4 + a

"rofi -show file-browser -theme ~/dotfiles/rofi/onedark.rasi -show-icons  -theme-str 'element-icon { size: 3ch;}'"
    m:0x40 + c:65
    Mod4 + space

"keepassxc"
    m:0x40 + c:39
    Mod4 + s

"~/bin/switch-theme"
    m:0x40 + c:40
    Mod4 + d

"~/bin/mpv_play"
    m:0x40 + c:45
    Mod4 + k

"/bin/xscreensaver-command -lock"
    m:0x40 + c:46
    Mod4 + l

"/bin/xdotool key Page_Up"
    b:9

"/bin/xdotool key Page_Down"
    b:8

### Window Management

"/bin/wmctrl -c :ACTIVE:"
    m:0x40 + c:24
    Mod4 + q

"/bin/wmctrl -s 0"
    m:0x40 + c:10
    Mod4 + 1

"/bin/wmctrl -s 1"
    m:0x40 + c:11
    Mod4 + 2

"/bin/wmctrl -s 2"
    m:0x40 + c:12
    Mod4 + 3

"/bin/wmctrl -s 3"
    m:0x40 + c:13
    Mod4 + 4

"/bin/wmctrl -s 4"
    m:0x40 + c:14
    Mod4 + 5

"/bin/wmctrl -s 5"
    m:0x40 + c:15
    Mod4 + 6

"/bin/wmctrl -s 6"
    m:0x40 + c:16
    Mod4 + 7

"/bin/wmctrl -s 7"
    m:0x40 + c:17
    Mod4 + 8

"/bin/wmctrl -s 8"
    m:0x40 + c:18
    Mod4 + 9

"/bin/wmctrl -r :ACTIVE: -b toggle,fullscreen"
    m:0x40 + c:41
    Mod4 + f

"/bin/wmctrl -r :ACTIVE: -b add,maximized_horz,maximized_vert"
    m:0x40 + c:111
    Mod4 + Up

"/bin/wmctrl -r :ACTIVE: -b remove,maximized_horz,maximized_vert"
    m:0x40 + c:116
    Mod4 + Down

"~/dotfiles/bin/winfocus left"
    m:0x41 + c:113
    Shift+Mod4 + Left

"~/dotfiles/bin/winfocus right"
    m:0x41 + c:114
    Shift+Mod4 + Right

"~/.local/bin/quicktile bottom-right"
    m:0x5 + c:114
    Control+Shift + Right

"~/.local/bin/quicktile bottom-left"
    m:0x5 + c:113
    Control+Shift + Left

"~/.local/bin/quicktile top-right"
    m:0x9 + c:114
    Alt+Shift + Right

"~/.local/bin/quicktile top-left"
    m:0x9 + c:113
    Alt+Shift + Left

"~/.local/bin/quicktile right"
    m:0x40 + c:114
    Mod4 + Right

"~/.local/bin/quicktile left"
    m:0x40 + c:113
    Mod4 + Left

### Media Management

"gnome-screenshot -i --file=file:///home/luca-linux/Pictures/Screenshot_$(date +%F_%H-%M-%S).jpg"
    m:0x0 + c:107
    Print
"sleep 0.5; gnome-screenshot -a --file=file:///home/luca-linux/Pictures/Screenshot_$(date +%F_%H-%M-%S).jpg"
    m:0x1 + c:107
    Shift + Print
"gnome-screenshot -w --file=file:///home/luca-linux/Pictures/Screenshot_$(date +%F_%H-%M-%S).jpg"
    m:0x8 + c:107
    Alt + Print
"alacritty -e ~/dotfiles/bin/screencast"
    m:0xd + c:27
    Control+Shift+Alt + r
