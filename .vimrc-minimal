" Miscellaneous
let g:python3_host_prog = '/usr/bin/python3'
let g:python_host_prog  = '/usr/bin/python2'
set autoindent
set autoread
set background=dark
set backspace=indent,eol,start
set colorcolumn=80
set copyindent
set cursorline
set encoding=utf8
set expandtab
set formatoptions=tcqj
set grepprg=rg\ --vimgrep\ --smart-case\ --follow
set guioptions=d
set hidden
set hlsearch
set ignorecase
set incsearch
set langnoremap
set langremap
set lazyredraw
set mouse=a
set nobackup
set nocompatible
set nofsync
set nomodeline
set noswapfile
set notermguicolors
set nowrap
set nowritebackup
set number
set path+=.,**
set scrolloff=8
set shiftwidth=4
set sidescroll=1
set smartcase
set smartindent
set smarttab
set softtabstop=4
set splitbelow
set splitright
set tabstop=4
set title
set ttimeoutlen=50
set ttyfast
set undodir=$HOME/.vim/undo
set undofile
set undolevels=10000
set updatetime=50
set wildignore+=tags
set wildmenu
set wildmode=list:longest,full
" Bottom bar
set noshowmode noshowcmd laststatus=0 ruler   " hide statusline
set rulerformat=%20(%m%r%w\ %y\ %l/%c%)\        " Modified+FileType+Ruler
syntax on
"""     Shortcuts   "
" do last action on a visual selection
vnoremap . :'<,'>:normal .<CR>
" navigate tabs Tab (fw) S-Tab (prev)
map <Tab>   :<C-u>bn!<CR>
map <S-Tab> :<C-u>bp!<CR>
 """ Ctrl-C  close buffer in normal mode
map <C-c> :<C-u>bp<BAR>sp<BAR>bn<BAR>bd<CR>
""" Ctrl-C copy visual selection to clipboard
vnoremap <C-c> :'<,'>w !xclip -sel clip<CR><CR>
" Leader map
let mapleader = ' '
