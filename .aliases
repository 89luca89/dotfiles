# BASIC ALIASES
function tssh() {
    SESSION=$(hostname)
    /usr/bin/ssh -t $@ "tmux new-session -A -s $SESSION > /dev/null 2>&1 || eval \$SHELL"
}
tail() {
    /usr/bin/tail $@ | ccze -A
}
ccat() {
    /usr/bin/cat $@ | ccze -A -o nolookups
}
make() {
    /usr/bin/make $@ | ccze -A -o nolookups
}
alias :q="exit"
alias :wq="exit"
alias :qa="exit"
alias :wqa="exit"
alias rsyncthingD='pushd ~/Syncthing; rsync -av --delete --progress -e "ssh -J thinkpad-w540.lan" --exclude=".stversions" root@fileserver.lan:/usr/local/mnt/Vault/Syncthing/ ~/Syncthing/; popd'
alias rsyncthingS='pushd ~/Syncthing; rsync -av --delete --progress -e "ssh -J thinkpad-w540.lan" --exclude=".stversions" ~/Syncthing/ root@fileserver.lan:/usr/local/mnt/Vault/Syncthing/; popd'
alias firefoxSync='find ~/.mozilla/ -iname "*cache*" | xargs rm -rf; find .mozilla/firefox/*/storage/default/http* -iname "*.files" | xargs rm -rf; pushd ~ ; tar cfv - .mozilla | xz -T 0 -9e > /tmp/firefox-profile.tar.xz; mv /tmp/firefox-profile.tar.xz ~/Syncthing/Browsers/firefox-profile.tar.xz; popd'
alias firefoxRestore='rm -rf ~/.mozilla; xz -T 0 -dc  ~/Syncthing/Browsers/firefox-profile.tar.xz | tar x -C ~/'
alias gearySync='pushd ~ ; tar cfv - .config/geary .local/share/geary/ | xz -T 0 -9e > ~/Syncthing/Browsers/geary-profile.tar.xz; popd'
alias gearyRestore='rm -rf .config/geary/ .local/share/geary/; xz -T 0 -dc ~/Syncthing/Browsers/geary-profile.tar.xz | tar -x -C ~/'
alias thunderSync='find ~/.thunderbird/ -iname "*cache*" | xargs rm -rf; pushd ~ ; tar cfv - --exclude=.thunderbird/*-default/ImapMail --exclude=.thunderbird/*-default/ExQuilla .thunderbird/ | xz -T 0 -9e > ~/Syncthing/Browsers/thunderbird-profile.tar.xz; popd'
alias thunderRestore='rm -rf ~/.thunderbird; xz -T 0 -dc  ~/Syncthing/Browsers/thunderbird-profile.tar.xz | tar x -C ~/'
