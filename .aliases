# BASIC ALIASES
alias :q="exit"
alias :wq="exit"
alias :qa="exit"
alias :wqa="exit"
alias update_ssh="assh config build | sed 's/%h$/%h 2> \/dev\/null/g' > ~/.ssh/config"
alias rsyncthingD='pushd ~/Syncthing;find ~/Syncthing/ -iname *.tmp -o -iname *conflict* -delete; rsync -av --delete --progress -e "ssh -J luca-lan -p 2223" --exclude=".stversions" fileserver@raspberrypi-1.lan:/data/Syncthing/ ~/Syncthing/; popd'
alias rsyncthingS='pushd ~/Syncthing;find ~/Syncthing/ -iname *.tmp -o -iname *conflict* -delete; rsync -av --delete --progress -e "ssh -J luca-lan -p 2223" --exclude=".stversions" ~/Syncthing/ fileserver@raspberrypi-1.lan:/data/Syncthing/; popd'
alias chromiumSync='~/bin/get_chromium_tabs.sh > ~/Syncthing/Browsers/open_tabs.txt'
alias chromiumRestore='cat ~/Syncthing/Browsers/open_tabs.txt | xargs chromium-freeworld'
alias firefoxSync='~/bin/get_firefox_tabs.py > ~/Syncthing/Browsers/open_tabs.txt'
alias firefoxRestore='cat ~/Syncthing/Browsers/open_tabs.txt | xargs firefox --new-tab &'
alias ll='ls -Ahl --group-directories-first --color'
alias open='xdg-open'
alias cp='cp --reflink=auto --sparse=always'
alias gcc='gcc -Wall -Wextra -lm'
alias whois="whois -h whois-servers.net"
alias vi='vim -u ~/dotfiles/.vimrc-minimal'
alias vim='vimx'
alias diff="diff --color=always"
alias gogetsys="export GOPATH=~/.local/go; go get"
alias gnome-reload='DISPLAY=:0 xdotool key Alt+F2; sleep 1; DISPLAY=:0 xdotool key r;DISPLAY=:0  xdotool key Return'
alias git-clean="git fetch -p && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -d"
export PATH=/bin:$PATH
export PATH=$HOME/bin:$PATH
export PATH=$HOME/.local/go/bin:$PATH
export PATH=$HOME/.local/bin/node_modules/.bin:$PATH
export GOPATH=$HOME/Projects/goprojects
export PATH=$PATH:$GOPATH/bin
export PATH=$HOME/.local/bin:$PATH
export RUSTUP_HOME=$HOME/.local/rust
export RUST_SRC_PATH="$RUSTUP_HOME/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/src/rust/src"
export CARGO_HOME=$HOME/.local/rust
export PATH=$PATH:$RUSTUP_HOME/bin
