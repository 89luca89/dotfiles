alias gearyRestore='rm -rf .config/geary/ .local/share/geary/; xz -T 0 -dc ~/Syncthing/Browsers/geary-profile.tar.xz | tar -x -C ~/'
alias thunderSync='find ~/.thunderbird/ -iname "*cache*" | xargs rm -rf; pushd ~ ; tar cfv - --exclude=.thunderbird/*-default/ImapMail --exclude=.thunderbird/*-default/ExQuilla .thunderbird/ | xz -T 0 -9e > ~/Syncthing/Browsers/thunderbird-profile.tar.xz; popd'
alias thunderRestore='rm -rf ~/.thunderbird; xz -T 0 -dc  ~/Syncthing/Browsers/thunderbird-profile.tar.xz | tar x -C ~/'
