alias firefoxRestore='cat ~/Syncthing/Browsers/open_tabs.txt | xargs firefox --new-tab &'
alias firefoxDeepSync='find ~/.mozilla/ -iname "*cache*" | xargs rm -rf; find .mozilla/firefox/*/storage/default/http* -iname "*.files" | xargs rm -rf; pushd ~ ; tar cfv - .mozilla | xz -T 0 -9e > /tmp/firefox-profile.tar.xz; mv /tmp/firefox-profile.tar.xz ~/Syncthing/Browsers/firefox-profile.tar.xz; popd'
alias firefoxDeepRestore='rm -rf ~/.mozilla; xz -T 0 -dc  ~/Syncthing/Browsers/firefox-profile.tar.xz | tar x -C ~/'
